@model List<SewaPatra.Models.SewaPatraIssue>

@{
    ViewData["Title"] = "SewaPatra Issue List";
}
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="pagetitle mt-2">
                        <h1>SewaPatra Issue List</h1>
                        <nav>
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">Entry</li>
                                <li class="breadcrumb-item active">SewaPatra Issue List</li>
                            </ol>
                        </nav>
                    </div>
                    <div style="display:flex;justify-content:flex-end;">
                        <a asp-controller="Entry" asp-action="SewaPatraIssue" style="margin-right: 13.6%;font-size: 12px; padding: 2px 8px;" class="btn btn-warning btn-sm">Add New</a>
                    </div>
                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th>SNo</th>
                                <th>Tran. Id</th>
                                <th>Entered Date</th>
                                <th>Donor</th>
                                <th>Coordinator</th>
                                <th>Donation Box</th>
                                <th>Issue Date</th>
                                <th>Recurring</th>
                                <th>Due Date</th>
                                <th>Remarks</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>                           
                            @if (Model != null && Model.Count > 0)
                            {
                                int sno = 1;
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@sno</td>
                                        <td>@item.TranId</td>
                                        <td>@item.Entered_Date.ToString("dd/MM/yyyy", System.Globalization.CultureInfo.InvariantCulture) </td>
                                        <td>@item.DonorName</td>
                                        <td>@item.Coordinatorname</td>
                                        <td>@item.DonationBoxName</td>
                                        <td>@item.Issue_Date.ToString("dd/MM/yyyy", System.Globalization.CultureInfo.InvariantCulture) </td>
                                        <td>@item.Recurring</td>
                                        <td>@item.Due_Date.Value.ToString("dd/MM/yyyy", System.Globalization.CultureInfo.InvariantCulture) </td>
                                        <td>@item.Remarks</td>
                                        <td>
                                            <a asp-controller="Entry" asp-action="EditSewaPatraIssue" asp-route-id="@item.TranId" style="background-color: #F1592A;color: #000000; font-size: 9px; padding: 2px 8px;" class="btn btn-sm">Edit</a>
                                            <a asp-controller="Entry" asp-action="DeleteSewaPatraIssue" asp-route-id="@item.TranId" style="background-color: #F1592A;color: #000000; font-size: 9px; padding: 2px 8px;" class="btn btn-sm">Delete</a>
                                        </td>
                                    </tr>
                                    sno++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</section>