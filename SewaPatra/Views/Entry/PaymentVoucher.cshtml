@model SewaPatra.Models.PaymentVoucher;

@{
    ViewBag.Title = "Payment Voucher";
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.Message
    </div>
}
<div class="card-body">
    <div class="pagetitle mt-2">
        <h1>Sewa Patra Issue</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Entry</a></li>
                <li class="breadcrumb-item">Payment Voucher</li>
            </ol>
        </nav>
    </div>
    <!-- Vertical Form -->
    <form method="post" asp-action="PaymentVoucher" asp-controller="Entry">
        <div class="row mb-2">
            <label asp-for="P_TranId" style="font-size: 13px;" class="col-sm-2 col-form-label">Transaction Id</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" style="font-size: 10px;" asp-for="P_TranId" id="TranId">
            </div>


            <label asp-for="Date" style="font-size: 13px;" class="col-sm-2 col-form-label">Date</label>
            <div class="col-sm-4">
                <input type="date" class="form-control" style="font-size: 10px;" asp-for="Date" id="enteredDate">
            </div>
        </div>
       
        <div class="row mb-2">
            <label asp-for="Ledger_Name" style="font-size: 13px;" class="col-sm-2 col-form-label">Ledger_Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" style="font-size: 10px;" asp-for="Ledger_Name" id="remarks">
            </div>
        </div>

        <div class="row mb-2">
            <label asp-for="Amount" style="font-size: 13px;" class="col-sm-2 col-form-label">Amount</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" style="font-size: 10px;" asp-for="Amount" id="Amount">
            </div>
        </div>

        <label asp-for="Coordinator" style="font-size: 13px;" class="col-sm-2 col-form-label">Coordinator</label>
        <div class="col-sm-4">
            <select asp-for="Coordinator" style="font-size: 10px;" class="form-select" aria-label="Select Coordinator">
                <option selected>Select Coordinator</option>
                <option value="1">Test1</option>
                <option value="2">Test2</option>
            </select>
        </div>

        <div class="row mb-2">
            <label asp-for="Remarks" style="font-size: 13px;" class="col-sm-2 col-form-label">Remarks</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" style="font-size: 10px;" asp-for="Remarks" id="remarks">
            </div>
        </div>
        <div class="text-Left">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="reset" class="btn btn-secondary">Reset</button>
        </div>
    </form>
</div>