@model List<SewaPatra.Models.Donor>

@{
    ViewData["Title"] = "Donor List";
}
@if (ViewBag.Message != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.Message
    </div>
}
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="pagetitle mt-2">
                        <h1>Donor List</h1>
                        <nav>
                            <ol class="breadcrumb">
                                @* <li class="breadcrumb-item"><a href="index.html">Home</a></li> *@
                                <li class="breadcrumb-item">Master</li>
                                <li class="breadcrumb-item active">Donor List</li>
                            </ol>
                        </nav>
                    </div>
                    <div style="display:flex;justify-content:flex-end;">
                        <a asp-controller="Master" asp-action="Donor" style="margin-right: 13.6%;font-size: 12px; padding: 2px 8px;" class="btn btn-warning btn-sm">Add New</a>
                    </div>
                    <!-- Table with stripped rows -->
                    <table class="table datatable table-responsive">
                        <thead>
                            <tr>
                                <th>SN</th>
                                <th>Name</th>
                                <th>Address</th>
                                <th>City</th>
                                <th>Mobile No</th>
                                <th>Alt Mobile No</th>
                                <th>Email</th>
                                <th>Area</th>
                                <th>Coordinator</th>
                                @* <th>Location</th> *@
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Count > 0)
                            {
                                int sno = 1;
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@sno</td>
                                        <td>@item.Name</td>
                                        <td>@item.Address</td>
                                        <td>@item.City</td>
                                        <td>@item.Mobile_No</td>
                                        <td>@item.Mobile_no2</td>
                                        <td>@item.Email</td>
                                        <td>@item.AreaName</td>
                                        <td>@item.CoordinatorName</td>
                                        @* <td>@item.Location</td> *@
                                        <td>
                                            <a asp-controller="Master" asp-action="EditDonor" asp-route-id="@item.Id" style="background-color: #F1592A;color: #000000; font-size: 9px; padding: 2px 8px;" class="btn btn-sm">Edit</a>
                                            <a asp-controller="Master" asp-action="DeleteDonor" asp-route-id="@item.Id" style="background-color: #F1592A;color: #000000; font-size: 9px; padding: 2px 8px;" class="btn btn-sm">Delete</a>
                                        </td>
                                    </tr>
                                    sno++;
                                }
                            }
                        </tbody>
                    </table>
                    <!-- End Table with stripped rows -->

                </div>
            </div>

        </div>
    </div>
</section>