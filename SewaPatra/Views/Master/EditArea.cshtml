@model SewaPatra.Models.Area

@{
    ViewBag.Title = "Edit Area";
}

@if(ViewBag.Message != null){
    <div class="alert alert-success" role="alert">
        @ViewBag.Message
    </div>
}
<div class="card-body">
    <h5 class="card-title">Edit Area</h5>

    <!-- Vertical Form -->
    <form class="row g-3" method="post" asp-action="EditArea" asp-controller="Master">
        <input type="hidden" asp-for="Id" />
        <div class="col-3">
            <label asp-for="Area_name" class="form-label">Area Name</label>
            <input type="text" class="form-control" asp-for="Area_name" id="areaName">
        </div>
        <div class="col-3">
            <label asp-for="Area_type" class="form-label">Area Type</label>
            <input type="text" class="form-control" asp-for="Area_type" id="areaType">
        </div>
        <div class="row mb-3">
            <label asp-for="Under" class="form-label">Under</label>
            <div class="col-3">
                <select asp-for="Under" class="form-select" aria-label="Select Coordinator">
                    <option selected>select Coordinator</option>
                    <option value="1">Ram</option>
                    <option value="2">Shyam</option>
                </select>
            </div>
        </div>
        <div class="text-Left">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="AreaList" class="btn btn-secondary">Cancel</a>
        </div>
    </form><!-- Vertical Form -->

</div>