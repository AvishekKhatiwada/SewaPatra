@model SewaPatra.Models.Coordinator

@{
    ViewBag.Title = "Edit Coordinator";
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.Message
    </div>
}

<div class="card-body">
    <div class="pagetitle mt-2">
        <h1>Edit Coordinator</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Master</a></li>
                <li class="breadcrumb-item">Coordinator</li>
                <li class="breadcrumb-item active">Edit Coordinator</li>
            </ol>
        </nav>
    </div>

    <!-- Vertical Form -->
    <form class="row g-3" method="post" asp-action="EditCoordinator" asp-controller="Master">
        <input type="hidden" asp-for="Id" />

        <div class="col-3">
            <label asp-for="Name" class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" id="Name" />
        </div>

        <div class="col-3">
            <label asp-for="Mobile_No" class="form-label">Mobile Number</label>
            <input type="text" class="form-control" asp-for="Mobile_No" id="Mobile_No" />
        </div>

        <div class="col-3">
            <label asp-for="Alternate_Mobile_No" class="form-label">Alternate Mobile Number</label>
            <input type="text" class="form-control" asp-for="Alternate_Mobile_No" id="Alternate_Mobile_No" />
        </div>

        <div class="col-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input type="email" class="form-control" asp-for="Email" id="Email" />
        </div>

        <div class="col-3">
            <label asp-for="Address" class="form-label">Address</label>
            <input type="text" class="form-control" asp-for="Address" id="Address" />
        </div>

        <div class="col-3">
            <label asp-for="City" class="form-label">City</label>
            <input type="text" class="form-control" asp-for="City" id="City" />
        </div>

        <div class="col-3">
            <label asp-for="location" class="form-label">Location</label>
            <input type="text" class="form-control" asp-for="location" id="Location" />
        </div>

        <div class="row mb-3">
            <label asp-for="Area_Under" class="form-label">Area Under</label>
            <div class="col-3">
                <select asp-for="Area_Under" asp-items="@ViewBag.Areas" class="form-select" aria-label="Select Coordinator"></select>
            </div>
        </div>

        <div class="form-check">
            <input type="checkbox" class="form-check-input" asp-for="Active" id="Active" />
            <label class="form-check-label" for="Active">Active</label>
        </div>

        <div class="text-left mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="CoordinatorList" class="btn btn-secondary">Cancel</a>
        </div>
    </form> <!-- Vertical Form -->
</div>
