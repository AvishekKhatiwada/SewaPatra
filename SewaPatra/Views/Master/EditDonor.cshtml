@model SewaPatra.Models.Donor

@{
    ViewBag.Title = "Edit Donor";
}
@if (ViewBag.Message != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.Message
    </div>
}
<div class="card-body">
    <div class="pagetitle mt-2">
        <h1>Edit Donor</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Master</a></li>
                <li class="breadcrumb-item">Donor</li>
                <li class="breadcrumb-item active">Edit Donor</li>
            </ol>
        </nav>
    </div>

    <form class="row g-3" method="post" asp-action="Donor" asp-controller="Master">
        <div class="col-md-12">
            <label asp-for="Name" class="form-label">Name</label>
            <input type="text" class="form-control" id="Name" asp-for="Name" required>
        </div>

        <div class="col-md-6">
            <label asp-for="Email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" asp-for="Email" required>
        </div>

        <div class="col-md-6">
            <label asp-for="Mobile_No" class="form-label">Mobile No</label>
            <input type="tel" class="form-control" id="mobileNo" asp-for="Mobile_No" required>
        </div>

        <div class="col-md-6">
            <label asp-for="Address" class="form-label">Address</label>
            <input type="text" class="form-control" id="address" asp-for="Address" placeholder="University Road, Kalimati" required>
        </div>

        <!-- Location -->
        <div class="col-md-6">
            <label asp-for="Location" class="form-label">Location</label>
            <input type="text" class="form-control" id="Location" asp-for="Location">
        </div>

        <div class="col-md-6">
            <label asp-for="Mobile_no2" class="form-label">Mobile No 2</label>
            <input type="tel" class="form-control" id="MobileNo2" asp-for="Mobile_no2">
        </div>

        <div class="col-md-4">
            <label asp-for="City" class="form-label">City</label>
            <select id="city" class="form-select" asp-for="City" required>
                <option selected>Choose...</option>
                <option value="ktm">KTM</option>
                <!-- Dynamically populated options -->
            </select>
        </div>
        <div class="col-md-4">
            <label asp-for="Area" class="form-label">Area</label>
            <select id="area" asp-items="@ViewBag.Areas" class="form-select" asp-for="Area" required></select>
        </div>

        <div class="col-md-4">
            <label asp-for="Coordinator" class="form-label">Coordinator</label>
            <select id="coordinator" class="form-select" asp-for="Coordinator" required>
                <option selected>Choose...</option>
                <option value="1">Coordinator1</option>
                <!-- Dynamically populated options -->
            </select>
        </div>

        <div class="col-md-4">
            <label asp-for="Active" class="form-label">Status</label>
            <select class="form-select" id="Status" asp-for="Active" required>
                <option selected>select Status</option>
                <option value="true">Active</option>
                <option value="false">Inactive</option>
            </select>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Submit</button>
            <button type="reset" class="btn btn-secondary">Reset</button>
        </div>
    </form>
</div>
