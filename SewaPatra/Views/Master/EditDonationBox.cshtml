@model SewaPatra.Models.DonationBox

@{
    ViewBag.Title = "Edit Donation Box";
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.Message
    </div>
}

<div class="card-body">
    <div class="pagetitle mt-2">
        <h1>Edit Donation Box</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Master</a></li>
                <li class="breadcrumb-item">Donation Box</li>
                <li class="breadcrumb-item active">Edit Donation Box</li>
            </ol>
        </nav>
    </div>

    <!-- Vertical Form -->
    <form class="row g-3" method="post" asp-action="EditDonationBox" asp-controller="Master">
        <input type="hidden" asp-for="Id" />

        <div class="col-3">
            <label asp-for="Box_Number" class="form-label">Box Number</label>
            <input type="text" class="form-control" asp-for="Box_Number" id="Box_Number" />
        </div>
